<% include ./partials/header.ejs %>

    <div class="ui main text container segment">
        <div class="ui huge header">
            Edit: <%= blog.title %>
            <div>
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST" class="ui form">
                    <div class="field">
                        <label for="blog[title">Title</label>
                        <input type="text" name="blog[title]" value="<%= blog.title %>">
                    </div>
                    <div class="field">
                        <label for="blog[image]">Image</label>
                        <input type="text" name="blog[image]" value="<%= blog.image %>">
                    </div>
                    <div class="field">
                        <label for="blog[body]">Body</label>
                        <textarea name="blog[body]" cols="30" rows="10"><%= blog.body %></textarea>
                    </div>
                    <button type="submit" class="ui inverted big green button">Submit</button>
                </form>
            </div>


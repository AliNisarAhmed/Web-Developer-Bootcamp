<% include ../partials/header.ejs %>

<div class="container">
  <h1 style="margin: 50px auto 50px auto; text-align: center">Create a new campground</h1>
  <form action="/campgrounds" method="POST">
    
    <div class="form-group row justify-content-center">
        <input class="form-control col-6" type="text" placeholder="Name of camp" name="name">
    </div>
    <div class="form-group row justify-content-center">
        <input class="form-control col-6" type="text" placeholder="Image url" name="image">
    </div>
    <div class="form-group row justify-content-center">
        <input class="form-control col-6" type="text" placeholder="description" name="description">
    </div>
    <div class="form-group row justify-content-center">
        <button class="btn btn-success btn-block col-6">Submit</button>
    </div>
    <div class="row justify-content-center">
        <a class="btn btn-primary" href="/campgrounds">Go Back</a>
    </div>
   
    

  </form>

</div>
    

